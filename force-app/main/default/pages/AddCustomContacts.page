<apex:page controller="AddCustomContacts">
<apex:form >
    <apex:pageBlock Title="Add New Contacts">
    <apex:pageBlockButtons location="top">
      <apex:commandButton value="Add Record" action="{!AddRecord}" />  
      <apex:commandButton value="Save Records" action="{!SaveRecord}" />  
      <apex:commandButton value="Cancel" action="{!CancelRecord}" />
    </apex:pageBlockButtons>     
    </apex:pageBlock>
     
<apex:pageBlock id="InitialValue" >
